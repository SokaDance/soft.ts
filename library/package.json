{
  "name": "library",
  "version": "1.0.0",
  "description": "a book library ",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "pretty": "prettier --write src/**/*.ts"
  },
  "author": "MASA Group",
  "license": "MPL-2.0",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "deep-equal": "^2.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-mockito": "^2.6.1",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@masagroup/ecore": "file:../ecore"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "semi": false
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "cache": false,
    "transform": {
      "^.+\\.[tj]s$": ["ts-jest", {
        "tsconfig": {
          "allowJs": true
        }
      }]
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@masagroup/ecore)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  }
}
