{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "declaration": true,
    "outDir": "lib",
    "rootDirs": [
      "src",
      "src-gen"
    ],
    "plugins": [
      { "transform": "ts-auto-mock/transformer", "cacheBetweenTests": false }
    ]
  },
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}
