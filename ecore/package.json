{
  "name": "@masagroup/ecore",
  "version": "0.0.1",
  "description": "ecore typescript library",
  "main": "index.js",
  "scripts": {
    "index": "barrelsby --directory ./src",
    "build": "tsc",
    "test": "ava --verbose",
    "pretty": "prettier --write **/*.ts"
  },
  "author": "Jocelyn DUMAY",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "ava": "^3.10.1",
    "barrelsby": "^2.2.0",
    "prettier": "^2.0.5",
    "ts-mockito": "^2.6.1",
    "typescript": "^3.9.7"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "/": "dist/"
      },
      "extensions": [
        "ts"
      ]
    },
    "cache": false,
    "concurrency": 1,
    "failFast": true,
    "failWithoutAssertions": true
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4
